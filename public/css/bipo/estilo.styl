@import "mixins.styl"

html
body
	font-family sans-serif
	font-size 11.5pt
table
	border-collapse collapse
table
tr
td
	border 1px solid black
	padding 2px 4px
.alert
	display none
	position fixed
	bottom 10px
	background-color #3366cc
	opacity(0.95)
	color #fff
	padding 10px 15px
	margin-left auto
	margin-right auto
	border-radius(10px)
	box-shadow(2px 5px 10px rgba(0,0,0,0.8))
.alert-success
	background-color #669900
	color #fff
.alert-error
	background-color #993333
	color #fff